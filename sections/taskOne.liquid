<section class="section-wrapper-{{ section.id }}">
  {% for block in section.blocks %}

  {% case block.type %}
    {% when "headLine" %}
    <div class="headLine-{{ block.id }}">
      <p class="headLine-{{ block.id }}-width-{{ block.settings.headLine }}">{{ block.settings.headLine }}</p>
    </div>

  {% when "imageSection" %}
    <div class="imageSection-{{ block.id }}">
      <img class="imageSection-{{ block.id }}-width-{{ block.settings.imageSection }}" src="{{ block.settings.upload_image | img_url:"200x200"}}">
    </div>

  {% when "textForShow" %}
    <div>
      <p class="textForShow-{{ block.id }}-width-{{ block.settings.textForShow }}">{{ block.settings.textForShowFirstLine }}</p>
      <p class="textForShow-{{ block.id }}-width-{{ block.settings.textForShow }}">{{ block.settings.textForShowSecondLine }} 
        <a class="textForShow-{{ block.id }}-width-{{ block.settings.textForShow }}" href="{{ block.settings.textForShow-anchor }}">{{ block.settings.textForShow-anchorText }}</a>
      </p>
    </div>
    {% endcase %}

  {% endfor %}
</section>



{% schema %}
  {
    "name": "taskOne",
    "blocks":[
      {
        "name": "Headline",
        "type": "headLine",
        "settings":[
          {
            "type": "richtext",
            "id": "headLine",
            "label":"Change the headline",
            "default":"<p>404- Not Found</p>"
          },
          {
          "type": "range",
            "id":"font-size",
            "label":"Font Size",
            "min": 10,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 16
          }, {
          "type": "range",
            "id":"mobile-font-size",
            "label":"Font Size For Mobile Device",
            "min": 8,
            "max": 40,
            "step": 1,
            "unit": "px",
            "default": 10
          },
           {
          "type": "range",
            "id":"line-height",
            "label":"Line Height",
            "min": 10,
            "max": 80,
            "step": 1,
            "unit": "px",
            "default": 16
          },
          {
          "type": "range",
            "id":"mobile-line-height",
            "label":"Line Height For Mobile",
            "min": 10,
            "max": 80,
            "step": 1,
            "unit": "px",
            "default": 16
          },
          {
          "type": "font",
            "id":"font",
            "label":"Font Family"
          },
          {
          "type": "color",
            "id":"text-color",
            "label":"Text Color",
            "default": "#000000"
          },
          {
          "type": "select",
            "id":"block-width",
            "label":"Width of BLock",
            "options":[
              {
                "value":"small",
                "label":"Small"
              },
              {
                "value":"medium",
                "label":"Medium"
              },
              {
                "value":"full",
                "label":"Full"
              },
              {
                "value":"custom",
                "label":"Custom"
              }
            ],
            "default": "medium"
          },
           {
          "type": "range",
            "id":"custom-block-width",
            "label":"Change your block Width",
            "min": 100,
            "max": 2000,
            "step": 50,
            "unit": "px",
            "default": 800
          },
           {
          "type": "select",
            "id":"align_text",
            "label":"Text Alignment",
            "options":[
              {
                "value":"left",
                "label":"Left"
              },
              {
                "value":"center",
                "label":"Center"
              },
              {
                "value":"right",
                "label":"Right"
              }
            ],
            "default": "center"
          }
          
        ]
      },
      {
        "name": "Image",
        "type": "imageSection",
        "settings":[
          {
            "type": "image_picker",
            "id": "upload_image",
            "label":"Change Your Image"
          }
        ]
      },
      {
        "name": "Below Text",
        "type": "textForShow",
        "settings":[
          {
            "type": "text",
            "id": "textForShowFirstLine",
            "label":"Change the First text",
            "default": "Oops, it looks like the page you are looking for is no longer here..."
          },
          {
            "type": "text",
            "id": "textForShowSecondLine",
            "label":"Change the Second text",
            "default": "Choose one of the links below or "
          },
          {
            "type": "url",
            "id": "textForShow-anchor",
            "label":"Change the Redirect Link",
            "default": "/"
          },
          {
            "type": "text",
            "id": "textForShow-anchorText",
            "label":"Change the anchor Text",
            "default": "click here to return home."
          }
        ]
      }
    ],
    "presets": [
		{ "name": "Test One" }
	]
  }
{% endschema %}
