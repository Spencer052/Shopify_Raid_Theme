<section class="section-wrapper-{{ section.id }} section-wrapper-{{ section.id }}-width-{{ section.settings.text-block-width }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'firstParagraph' %}
        <div class="firstParagraph-{{ block.id }}">
          {{ block.settings.firstParagraph }}
        </div>
      {% when 'secondParagraph' %}
        <div class="secondParagraph-{{ block.id }}">
          {{ block.settings.secondParagraph }}
        </div>
      {% when 'spacer-block' %}
        <div class="spacer-{{ block.id }}">
          
        </div>
    {% endcase %}
  {% endfor %}
</section>

<style>
  .section-wrapper-{{ section.id }}-width-small{
    max-width: 600px;
    margin:0 auto;
    background-color: aliceblue;
  }
  .section-wrapper-{{ section.id }}-width-medium{
    max-width: 967px;
    margin:0 auto;
    background-color: aliceblue;
  }
  .section-wrapper-{{ section.id }}-width-large{
    max-width: 100%;
    background-color: aliceblue;
  }
  .section-wrapper-{{ section.id }}-width-custom{
    max-width: {{section.settings.custom-block-width | append: "px"}};
    margin:0 auto;
    background-color: aliceblue;
  }

  {% if section.settings.flip-position==false %}
  .section-wrapper-{{ section.id }}{
    display:block;
  }
  {% else %}
  .section-wrapper-{{ section.id }}{
    display:flex;
    gap:{{section.settings.gap}}px;
  }
{% endif %}

    {% for block in section.blocks %}

      {% case block.type %}
        {% when "firstParagraph" %}

      .firstParagraph-{{ block.id }} p{
        font-size:{{block.settings.font-size | append:"px"}};
        font-family: {{block.settings.font-family}};
        line-height: {{block.settings.line-height}}px;
        color: {{block.settings.text-color}};
        letter-spacing:{{ block.settings.letter-spacing }}px;
        text-indent:{{ block.settings.text-indent }}cm;
        padding:{{block.settings.padding}}px;
      }

      .firstParagraph-{{ block.id }}{
        text-align:{{block.settings.align_text}};
      }

      @media only screen and (max-width: 600px){
        font-size:{{block.settings.mobile-font-size | append:"px"}};
        font-family: {{block.settings.mobile-font-family}};
        line-height: {{block.settings.mobile-line-height}}px;
        color: {{block.settings.mobile-text-color}};
        letter-spacing:{{ block.settings.mobile-letter-spacing }}px;
        text-indent:{{ block.settings.text-indent }}cm;
        padding:{{block.settings.padding}}px;
      }

      {% when "secondParagraph" %}
        .secondParagraph-{{ block.id }} p{
        font-size:{{block.settings.font-size | append:"px"}};
        font-family: {{block.settings.font-family}};
        line-height: {{block.settings.line-height}}px;
        color: {{block.settings.text-color}};
        letter-spacing:{{ block.settings.letter-spacing }}px;
        text-indent:{{ block.settings.mobile-text-indent }}cm;
          padding:{{block.settings.padding}}px;
      }

      .secondParagraph-{{ block.id }}{
        text-align:{{block.settings.align_text}};
      }

      @media only screen and (max-width: 600px){
        font-size:{{block.settings.mobile-font-size | append:"px"}};
        font-family: {{block.settings.mobile-font-family}};
        line-height: {{block.settings.mobile-line-height}}px;
        color: {{block.settings.mobile-text-color}};
        letter-spacing:{{ block.settings.mobile-letter-spacing }}px;
        text-indent:{{ block.settings.mobile-text-indent }}cm;
        padding:{{block.settings.padding}}px;
      }

      {% when 'spacer-block' %}
        .spacer-{{block.id}}{
          height:{{ block.settings.spacer-height}}px;
        }

      {% endcase %}

      {% endfor %}
</style>

